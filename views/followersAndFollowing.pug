extends layouts/main-layout.pug
block content
    if !profileUser
        span.errorMessage Check the url you are trying to access.
    else
        script.
            const profileUserId = "!{profileUser._id}"
            const selectedTab = "!{selectedTab}"

        .tabsContainer
            +createTab("关注", `/profile/${profileUser.username}/following`, selectedTab != "followers")
            +createTab("粉丝", `/profile/${profileUser.username}/followers`, selectedTab == "followers")

        .resultsContainer

block scripts
    script(src="/js/followersAndFollowing.js")